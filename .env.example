# Server Configuration
NODE_ENV=production
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tiaadeals
DB_USER=tiaadeals_user
DB_PASSWORD=Ti@@De@ls

# JWT Configuration
JWT_SECRET=your-jwt-secret
JWT_EXPIRES_IN=24h

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:8080

POSTGRES_PASSWORD=monu

# SSL Configuration
SSL_CERT_PATH=/etc/letsencrypt/live/tiaadeals.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/tiaadeals.com/privkey.pem

# Logging
LOG_LEVEL=info
LOG_DIR=/var/www/tiaadeals-backend/logs

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGIN=https://tiaadeals.com
SESSION_SECRET=your_session_secret_here
COOKIE_SECURE=true
COOKIE_HTTP_ONLY=true

# AWS Configuration (if using)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-south-1
AWS_BUCKET_NAME=tiaadeals-bucket

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
